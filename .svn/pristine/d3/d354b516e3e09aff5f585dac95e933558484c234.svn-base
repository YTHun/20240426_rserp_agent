<mapper namespace="AutoReceipt_PostGresql_Dao">

	<!-- SELECT -->
<!--	FIXME 추후 select 쿼리 수정 필요-->
	<select id="AutoReceipt_PostGresql_Dao.getReceiptAuto.select" parameterType="CmMap" resultType="CmResMap">
		select	case when count(1) > 0 then 'Y' else 'N' end 		as chk
		from	sr_bill_receipt_auto a
		where 	compcode		=	#{compcode}
		and		dancode			=	#{dancode}
		and		dongcode		=	TRIM(#{dongcode})
		and		roomno			=	#{roomno}
		and		yyyymm			=	#{yyyymm}
		and		rentgbn			=	#{rentgbn}
		and		recgubun		=	#{recgubun}
		and		bankgubun		=	#{bankgubun}
		and		seqchk			=	#{seqchk}
	</select>

	<!-- INSERT -->
	<insert id="AutoReceipt_PostGresql_Dao.insertReceiptAuto.insert" parameterType="CmMap">
		INSERT INTO sr_bill_receipt_auto(
				compcode
			,   dancode
			,   dongcode
			,   roomno
			,   yyyymm
			,   rentgbn
			,   recgubun
			,   bankgubun
			,   seqchk
			,   fixgubun
			,   receiptgbn
			,   amount
			,   autodate
			,   autogubun
			,   autoresult
			,   wdate
			,   recchk
			,   rdate
			,   accountno
			,   outcode
			,   incode
			,   napkiyn
			,   sunapyn
			,   resultok
			,   bigyo
			,   jijumcode
			,   accname
			,   cschkyn
			,   rectime
			,   downyn
			,   downdate
			,   uprecdate
			,   recautochk
			,   sendmoney
			,   fixyn
			,	receipt_yn
			,   row_input_date
			,   row_input_emp_no
			,   row_input_ip
	 	)
		VALUES (
				#{compcode}
			,   TRIM(#{dancode})
			,   TRIM(#{dongcode})
			,   TRIM(#{roomno})
			,   #{yyyymm}
			,   #{rentgbn}
			,   #{recgubun}
			,   #{bankgubun}
			,   #{seqchk}
			,   #{fixgubun}
			,   #{receiptgbn}
			,   #{amount}::numeric
			,   #{autodate}
			,   #{autogubun}
			,   #{autoresult}
			,   #{wdate}
			,   #{recchk}
			,   TRIM(#{rdate})
			,   #{accountno}
			,   #{outcode}
			,   #{incode}
			,   #{napkiyn}
			,   #{sunapyn}
			,   #{resultok}
			,   #{bigyo}
			,   #{jijumcode}
			,   #{accname}
			,   #{cschkyn}
			,   #{rectime}::timestamp
			,   #{downyn}
			,   #{downdate}::timestamp
			,   #{uprecdate}::timestamp
			,   #{recautochk}
			,   #{sendmoney}
			,   #{fixyn}
			,	#{pcode}
			,   now()
			,   #{userId}
			,   #{userIp}
		)
	</insert>

	<!-- UPDATE -->

	<update id="AutoReceipt_PostGresql_Dao.updateReceiptAuto.update" parameterType="CmMap">
		update	sr_bill_receipt_auto	set receipt_yn 	= #{pcode}
		                            	,	amount		= CASE WHEN #{pcode} = 'M' THEN #{amount}::numeric ELSE amount END
		where 	compcode		=	#{compcode}
		and		dancode			=	#{dancode}
		and		dongcode		=	#{dongcode}
		and		roomno			=	#{roomno}
		and		yyyymm			=	#{yyyymm}
		and		rentgbn			=	#{rentgbn}
		and		recgubun		=	#{recgubun}
		and		bankgubun		=	#{bankgubun}
		and		seqchk			=	#{seqchk}
	</update>

	<!-- DELETE -->

</mapper>
